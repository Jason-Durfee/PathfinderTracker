@model Item

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="GPValue" class="control-label"></label>
    <input asp-for="GPValue" class="form-control" />
    <span asp-validation-for="GPValue" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Slot" class="control-label"></label>
    <select asp-for="SlotID" class="form-control" asp-items="ViewBag.SlotID"></select>
    <span asp-validation-for="SlotID" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ConstructionRequirements" class="control-label"></label>
    <input asp-for="ConstructionRequirements" class="form-control" />
    <span asp-validation-for="ConstructionRequirements" class="text-danger"></span>
</div>