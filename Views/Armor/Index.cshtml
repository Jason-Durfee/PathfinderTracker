@model IEnumerable<PathfinderTracker.Models.Armor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GPValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ACBonus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArmorCheckPenalty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArmorType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArmorAddon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialAttributes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GPValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ACBonus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArmorCheckPenalty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArmorType.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArmorAddon.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialAttributes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
