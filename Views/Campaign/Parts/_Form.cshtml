@model Campaign

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="CurrentTime" class="control-label"></label>
    <input type="time" asp-for="CurrentTime" class="form-control" />
    <span asp-validation-for="CurrentTime" class="text-danger"></span>
</div>
<div class="form-group campaignNotes">
    <label asp-for="Notes" class="control-label"></label>
    <textarea rows="6" asp-for="Notes" class="form-control"></textarea>
    <span asp-validation-for="Notes" class="text-danger"></span>
</div>