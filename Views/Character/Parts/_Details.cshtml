        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.Name)
        </dd>
    }
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Campaign)
    </dt>
    <dd class="col-sm-10">
