        @Html.DisplayFor(model => model.Alignment.Abbreviation)
    </dd>
    @if(Model.Deity != null) {
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deity.Name)
