        @Html.DisplayNameFor(model => model.IsNPC)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.IsNPC)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Alignment)
    </dt>
